<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/backgroundColor">

    <!-- Картинка -->

    <!-- Приветствие -->

    <!-- Слоган -->

    <TextView
        android:id="@+id/text_title"
        style="@style/TextAppearance.AppCompat.StandartText.BigText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Добро пожаловать в\nШабашер"
        android:textColor="@color/mainTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/welcome_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <!-- Кнопка регистрации -->

    <TextView
        android:id="@+id/text_subtitle"
        style="@style/TextAppearance.AppCompat.StandartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Управляйте, отдыхайте, играйте\nКоснитесь кнопки, чтобы начать!"
        android:textColor="@color/mainTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_image" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/buttonsColor"
        style="@style/TextAppearance.AppCompat.StandartText"
        android:text="Регистрация"
        android:textColor="@color/mainTextColor"
        app:layout_constraintBottom_toTopOf="@id/button_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Кнопка входа -->
    <Button
        android:id="@+id/button_login"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginBottom="24dp"
        style="@style/TextAppearance.AppCompat.StandartText"
        android:backgroundTint="@color/accentColor"
        android:text="Вход"
        android:textColor="@color/mainTextColor"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
